<div class="container">

  <h1 class='title'>My <span class='logoM'>D</span>ashboard</h1>
    <h1 class='about'>"Believe in yourself. Dream. Try. Do good."</h1>


  <div class="dashLeft" style="width:780px;min-height:400px;border:1px solid grey; margin:10px 10px; display: inline-block; vertical-align: top;">
  <p style="font-size: 23px; font-weight:bold; position:relative; margin: 10px 10px;"> My Listings</p>

  <% @user.posts.all.each do |p| %>
      <div class="listingContainer" style="border:1px solid grey; margin:12px 12px; min-height: 60px; padding-top: 12px; font-weight: bold; background-color:#D4CFCF; text-align: left;">
        <a href="/posts/<%=p.id%>" style="font-size:18px; color:#486D84;">
          <p style="margin-left:5px;">
            <%= p.title.capitalize %>  - <%= p.city %>
          </p>
        </a>

      <hr style="margin-left:5px;">

        <% p.requests.all.each do |v| %>
          <% unless v == nil %>
            <p style="margin:15px 0; margin-left: 5px; font-size: 17px;line-height: 17px; position: relative;">
            <%= v.user.first_name %> (<%= v.user.email %>) sent a request for your lesson.
            <a href="/posts/<%=v.post_id%>/requests/<%=v.id%>" style="margin-left: 5px; font-size: 17px;line-height: 17px; color:blue; position: absolute; right: 90px;">View</a>
            <a href="/posts/<%=v.post_id%>/requests/<%=v.id%>" data-method='delete' style="margin-left: 5px; font-size: 17px;line-height: 17px; color:blue; position: absolute; right: 20px;">Delete</a>
            </p>

          <% end %>

        <% end %>
      </div>
  <% end %>

  <% if @user.posts.empty? %>
      <p style="margin: 10px auto;">You have no listings at this time</p>
  <% end %>

      <a href="/posts/new" style="display: inline-block; height:35px; width:150px; background-color:orange; border-radius:4px; line-height: 35px; margin: 10px auto;">Create New Post</a>
  </div>

<!-- ********************************************************************* -->

  <div class="dashRight" style="width:780px;min-height:400px;border:1px solid grey; margin:10px 10px; display: inline-block; vertical-align: top;">
  <p style="font-size: 23px; font-weight:bold; position:relative; margin: 10px 10px;"> My Booking Requests</p>

  <% @user.requests.all.each do |r| %>
      <div class="listingContainer" style="border:1px solid grey; margin:12px 12px; min-height: 60px; padding-top: 12px; font-weight: bold; background-color:#D4CFCF; text-align: left;">
        <a href="/posts/<%= r.post_id %>" style="font-size:18px; color:#486D84;">
          <p style="margin-left:5px;">
            <%= r.post.title.capitalize %>  - <%= r.post.city %>
          </p>
        </a>

      <hr style="margin-left:5px;">

        <% unless r == nil %>
          <p style="margin:15px 0; margin-left: 5px; font-size: 17px;line-height: 17px; position: relative;">
            You sent a request to: <%= r.post.user.first_name %>
            <a href="/posts/<%=r.post_id%>/requests/<%=r.id%>" style="margin-left: 5px; font-size: 17px;line-height: 17px; color:blue; position: absolute; right: 90px;">View</a>
            <a href="/posts/<%=r.post_id%>/requests/<%=r.id%>" data-method='delete' style="margin-left: 5px; font-size: 17px;line-height: 17px; color:blue; position: absolute; right: 20px;">Delete</a>
          </p>

          <% end %>
      </div>
  <% end %>

  <% if @user.requests.empty? %>
      <p style="margin: 10px auto;">You have no requests at this time</p>
  <% end %>

  </div>


</div>
